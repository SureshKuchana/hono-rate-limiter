{
  "name": "sandbox",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/sandbox/api",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run sandbox:rollup",
          "mv dist/apps/sandbox/index.esm.js dist/apps/sandbox/api/index.js",
          "mv dist/apps/sandbox/index.esm.d.ts dist/apps/sandbox/api/index.d.ts"
        ],
        "parallel": false
      }
    },
    "rollup": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "apps/sandbox/api/index.ts",
        "outputPath": "dist/apps/sandbox",
        "tsConfig": "apps/sandbox/tsconfig.json",
        "compiler": "swc",
        "external": ["react/jsx-runtime"],
        "project": "apps/sandbox/package.json",
        "format": ["esm"],
        "assets": [
          {
            "glob": "apps/sandbox/public",
            "input": ".",
            "output": "."
          },
          {
            "glob": "apps/sandbox/vercel.json",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    }
  },
  "tags": []
}
